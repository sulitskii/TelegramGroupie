# Local Development Environment Configuration
# Copy this to .env and configure with your actual values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
PORT=8080

# Telegram Bot Configuration
TELEGRAM_TOKEN=your_bot_token_here
WEBHOOK_SECRET=local_webhook_secret_for_testing

# Google Cloud Configuration
GCP_PROJECT_ID=your_project_id_here
KMS_LOCATION=global
KMS_KEY_RING=telegram-messages
KMS_KEY_ID=message-key

# Google Cloud Credentials (for local testing)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Database Configuration
# For local testing, you can use Firestore emulator
FIRESTORE_EMULATOR_HOST=localhost:8081

# Integration Test Configuration
INTEGRATION_TEST_MODE=true
TEST_CHAT_ID=-100123456789
TEST_USER_ID=123456
TEST_BOT_TOKEN=test_token_for_integration_tests 